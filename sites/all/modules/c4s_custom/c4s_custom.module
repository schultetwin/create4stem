<?php

/**
 * Implementation of hook_menu_alter().
 *
 * This alther puts tabs for the user profile in this order
 * view (named about, core)
 * Research (views)
 * Publications (biblio)
 * Courses (views)
 * Contact (contact module)
 * Edit (core)
 * Shortcuts (core)
 * Devel (devel)
 */
function c4s_custom_menu_alter(&$items) {
  // Set the user weights
  $items['user/%user/biblio']['weight'] = 4;
  $items['user/%user/biblio']['title'] = 'Publications';
  $items['user/%user/contact']['weight'] = 8;
  $items['user/%user/edit']['weight'] = 10;
  $items['user/%user/shortcuts']['weight'] = 12;
}

/**
 * Implementation of hook_form_alter().
 *
 * Alters the registartion page setting the weight of the profile2 fields after
 * the other fields
 */
function c4s_custom_form_user_register_form_alter(&$form, &$form_state) {
  foreach (profile2_get_types() as $type_name => $profile_type) {
    if (!empty($profile_type->data['registration'])) {
      if (empty($form_state['profiles'][$type_name])) {
        $form_state['profiles'][$type_name] = profile2_create(array('type' => $type_name));
      }
      if (isset($form['#fieldgroups']['group_user_password'])) {
        $weight = $form['#fieldgroups']['group_user_password']->weight + 1;
      }
      else {
        $weight = 3;
      }
      $form['profile_' . $type_name] += array(
        '#weight' => $weight,
      );
    }
  }

}

/**
 * Implementation of hook_block_info().
 *
 * Creates a login link
 */
function c4s_custom_block_info() {
  $blocks['user_login_link'] = array(
    'info' => t('Login Link'),
    'cache' => DRUPAL_NO_CACHE,
  );

  return $blocks;
}

/**
 * Implementation of hook_block_view().
 *
 */
function c4s_custom_block_view($delta = '') {
  switch ($delta) {
    case 'user_login_link':
      $block['content'] = l(t('Log in'), 'user');
      break;
  }
  return $block;
}

/**
 * Implementation of hook_page_build().
 *
 * Change user/%user/biblio page title
 */
function c4s_custom_page_build(&$page) {
  if (arg(0) == 'user' && is_numeric(arg(1)) && arg(2) == 'biblio') {
    drupal_set_title(t('Publications'));
  }
}

/**
* Revert specified features.
*
* @TODO Check that it really is Forced features revert.  Currently an exact
* copy of the function initially placed in feature_projects.install.
*
* Code mostly taken from drush.
*/
function c4s_custom_features_revert($modules) {
  module_load_include('inc', 'features', 'features.export');
  features_include();
  foreach ($modules as $module) {
    if (($feature = feature_load($module, TRUE)) && module_exists($module)) {
      $components = array();
      // Forcefully revert all components of a feature.
      foreach (array_keys($feature->info['features']) as $component) {
        if (features_hook($component, 'features_revert')) {
          $components[] = $component;
        }
      }
    }
    foreach ($components as $component) {
      features_revert(array($module => array($component)));
    }
  }
}
